{
	"compilerOptions": {
		// "module": "commonjs",
		"lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"downlevelIteration": true,
		"outDir": "./lib/esm",
		"declaration": true,
		"strict": true,
		// "target": "es2017",
		"moduleResolution": "node",
		"target": "ES6",
		"module": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"compileOnSave": true,
	"include": ["./src"],
	"exclude": ["node_modules", "dev", "lib", "test"]
}
