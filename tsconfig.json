{
	"compilerOptions": {
		"module": "commonjs",
		"lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"downlevelIteration": true,
		"outDir": "./lib",
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2017"
	},
	"compileOnSave": true,
	"include": ["src"],
	"exclude": ["node_modules", "dev", "lib", "test"]
}
